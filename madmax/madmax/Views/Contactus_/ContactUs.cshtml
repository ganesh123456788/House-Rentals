@model madmax.Models.Contactus_model

@{
    ViewBag.Title = "ContactUs";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="contact_us.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <title>Document</title>
</head>
<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
        }

        .service {
            display: flex;
            align-items: center;
            /* border: 2px solid red; */
            margin: 16px 0px;
            /* justify-content: space-between; */
        }

        .contact_us {
            position: fixed;
            width: 100%;
            margin: 18px 0px;
            /* border: 2px solid red; */
        }

            .contact_us h2 {
                text-align: center;
            }

        .con {
            border: 1px solid rgb(194, 185, 185);
            display: block;
            width: 50%;
            margin: 6px 11px;
            height: 300px;
        }

        .cont {
            display: flex;
            padding: 14px 6px;
            margin: 4px 8px;
        }

            .cont i {
                margin: 0px 9px;
            }
        /* .con_de{
        display: flex;
        padding: 6px 6px ;
        margin: 4px;
    } */
        .tact {
            margin: 6px 11px;
            border: 1px solid rgb(194, 185, 185);
            display: block;
            width: 50%;
            height: 350px;
            box-sizing: border-box;
        }

            .tact h3 {
                text-align: center;
                margin: 10px 13px;
            }

            .tact .message {
                /* text-align: center; */
                padding: 6px 3px;
                margin: 3px 10px;
                border-radius: 4px;
            }

            .tact .sen {
                position: relative;
                left: 70%;
                margin-top: 15px;
            }

                .tact .sen .su {
                    text-decoration: none;
                    border: 2px solid grey;
                    padding: 8px 32px;
                    border-radius: 10px;
                    background-color: rgb(14, 13, 13);
                    color: rgb(248, 246, 246);
                }

        .back {
            border: 2px solid grey;
            color: white;
            background: black;
            text-decoration: none;
            padding: 10px 12px;
            margin: 5px 25px;
            border-radius: 10px;
        }
</style>

<body>
    <div class="contact_us">
        <h2>Contact Us</h2>
        <div class="service">
            <div class="con">

                <div class="cont">
                    <i class="fas fa-map-marked-alt"></i>
                    <div class="con_de">

                        <h4>Address:</h4>
                        <p>Kukatpally, Hyderabad</p>
                    </div>
                </div>

                <div class="cont">
                    <i class="fas fa-phone-square-alt"></i>
                    <div class="con_de">
                        <h4>Phone No:</h4>
                        <p>040-12343214</p>
                    </div>
                </div>

                <div class="cont">

                    <i class="fas fa-envelope"></i>
                    <div class="con_de">
                        <h4>Email:</h4>

                        <p>jph123@gmail.com</p>
                    </div>
                </div>

            </div>

            <div class="tact">
                <h3>Send Message</h3>
                @using (Html.BeginForm("ContactUs", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name)
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div>
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div>
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message)
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                    <button type="submit">Send</button>
                }

                @if (TempData["Message"] != null)
                {
                    <div>@TempData["Message"]</div>
                }



            </div>
        </div>

        <!-- <a href="prj.html" class="back"><i class="far fa-arrow-alt-circle-left"></i>Back</a> -->
    </div>
</body>

</html>