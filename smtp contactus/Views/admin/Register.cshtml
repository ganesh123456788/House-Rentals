
@model smtp_contactus.Models.User
<h2>Register</h2>
@using (Html.BeginForm("Register", "admin", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName)
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div>
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName)
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div>
        @Html.LabelFor(m => m.PhoneNumber)
        @Html.TextBoxFor(m => m.PhoneNumber)
        @Html.ValidationMessageFor(m => m.PhoneNumber)
    </div>
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div>
        @Html.LabelFor(m => m.FlatNumber)
        @Html.TextBoxFor(m => m.FlatNumber)
        @Html.ValidationMessageFor(m => m.FlatNumber)

    </div>
    <div>
        @Html.LabelFor(m => m.JoiningDate)
        @Html.TextBoxFor(m => m.JoiningDate, "{0:yyyy-MM-dd}", new { @type = "date" })
        @Html.ValidationMessageFor(m => m.JoiningDate)
    </div>
    <div>
        @Html.LabelFor(m => m.AadhaarNumber)
        @Html.TextBoxFor(m => m.AadhaarNumber)
        @Html.ValidationMessageFor(m => m.AadhaarNumber)
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <button type="submit">Register</button>
}
<a href="@Url.Action("Index", "Home")">Back to Home</a>

